CREATE TABLE Comment (commentId bigint(20) NOT NULL AUTO_INCREMENT, parentId bigint(20) DEFAULT NULL, inReplyTo varchar(255) DEFAULT NULL, elementId bigint(20) DEFAULT NULL, createdBy bigint(20) DEFAULT NULL, fullname varchar(255) DEFAULT NULL, picture varchar(255) DEFAULT NULL, postedDate datetime DEFAULT NULL, text varchar(255) DEFAULT NULL, versionId bigint(20) default null, PRIMARY KEY (commentId), FOREIGN KEY(elementId) REFERENCES ClimateService(id), FOREIGN KEY(createdBy) REFERENCES User(id))